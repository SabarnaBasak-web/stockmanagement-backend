generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Login {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  imagePath String?

  roleId Int
  role   Roles @relation(fields: [roleId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Routes {
  id     Int     @id @default(autoincrement())
  routes String
  Roles  Roles[]
}

model Roles {
  id   Int    @id @default(autoincrement())
  role String @unique

  route Routes[]

  Login Login[]
}

model Ip {
  id       Int     @id @default(autoincrement())
  ipNumber String
  active   Boolean
  inUse    Boolean

  Employee         Employee[]
  AssignedProducts AssignedProducts[]
}

model Vendor {
  id Int @id @default(autoincrement())

  name           String
  mobile         Int
  address        String
  dateOfRegistry DateTime

  Ups     Ups[]
  Monitor Monitor[]
  Cpu     Cpu[]
}

model Products {
  id     Int     @id @default(autoincrement())
  name   String
  active Boolean

  Ups     Ups[]
  Monitor Monitor[]
  Cpu     Cpu[]
}

model Ups {
  id      Int      @id @default(autoincrement())
  gemNo   Int
  gemDate DateTime

  brandName        String
  serialNo         String    @unique
  modelNo          String    @unique
  deliveryDate     DateTime?
  problem          String?
  warrentStartDate DateTime?
  warrentyEndDate  DateTime?
  defunct          Boolean
  isAmc            Boolean
  eWaste           Boolean

  productId Int
  product   Products @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  vendorId Int
  vendor   Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Monitor {
  id      Int      @id @default(autoincrement())
  gemNo   Int
  gemDate DateTime

  brandName        String
  serialNo         String    @unique
  modelNo          String    @unique
  deliveryDate     DateTime?
  problem          String?
  warrentStartDate DateTime?
  warrentyEndDate  DateTime?
  defunct          Boolean
  isAmc            Boolean
  eWaste           Boolean

  displaySize String

  productId Int
  product   Products @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  vendorId Int
  vendor   Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Cpu {
  id      Int      @id @default(autoincrement())
  gemNo   Int
  gemDate DateTime

  brandName        String
  serialNo         String    @unique
  modelNo          String    @unique
  deliveryDate     DateTime?
  problem          String?
  warrentStartDate DateTime?
  warrentyEndDate  DateTime?
  defunct          Boolean
  isAmc            Boolean
  eWaste           Boolean

  ssd                    String?
  hdd                    String?
  processor              String
  processorBaseFrequency String
  ram                    String
  opticalDrive           Boolean
  graphicsCard           String?
  wireless               Boolean
  os                     String
  osSerialNumber         String
  chipSet                String
  upgrade                Boolean
  active                 Boolean

  productId Int
  product   Products @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  vendorId Int
  vendor   Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Employee {
  id           Int     @id @default(autoincrement())
  name         String
  designation  String
  cell         String
  floorNumber  String
  mobileNumber String
  empId        String  @unique
  active       Boolean

  ipId             Int?
  Ip               Ip?                @relation(fields: [ipId], references: [id])
  AssignedProducts AssignedProducts[]
}

model AssignedProducts {
  id           Int       @id @default(autoincrement())
  serialNo     String    @unique
  dateOfIssue  DateTime?
  dateOfReturn DateTime?

  empId    String
  employee Employee @relation(fields: [empId], references: [empId])
  ipId     Int
  ip       Ip       @relation(fields: [ipId], references: [id])
}
